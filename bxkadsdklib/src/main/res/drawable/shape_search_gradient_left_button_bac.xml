<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <size
                android:width="80dp"
                android:height="40dp" />

            <solid android:color="@color/color_search_bac1" />
            <!-- 边框底部两个角都是有弧度的 -->
            <corners
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="2dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="0dp"
        android:top="1dp"> <!--设置除了顶部都有边框-->
        <shape>
            <size
                android:width="80dp"
                android:height="40dp" />

            <corners
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="2dp"
                android:topRightRadius="0dp" />
            <solid android:color="@color/color_white" />
        </shape>
    </item>

</layer-list>
