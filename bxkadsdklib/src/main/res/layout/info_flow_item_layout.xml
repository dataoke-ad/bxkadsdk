<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="116dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/label_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_f57223"
            android:text="近2小时疯抢6463件"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_ffeac2_solid_05_f57233_stroke"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:rotation="90"
            android:src="@drawable/info_flow_1"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:src="@drawable/info_flow_1"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/info_flow_2"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="@color/color_333"
            android:text="新券 ！秒杀漫花101大包抽纸新券 ！秒杀漫花10大包抽纸新券 ！秒杀漫花10大包抽纸新券 ！秒杀漫花10大包抽纸"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="12dp"
            android:textColor="@color/color_ff3b32"/>
        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.9"
            android:textSize="16dp"
            android:textColor="@color/color_ff3b32"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="券后"
            android:textSize="10dp"
            android:textColor="@color/color_9b"
            />
        <TextView
            android:id="@+id/quan_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元"
            android:textSize="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_fff"
            android:background="@drawable/bg_ff0032_to_ff4e71_1dp"
            />
    </LinearLayout>
</LinearLayout>
